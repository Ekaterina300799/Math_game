<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fon_level1"
    tools:context=".Level1">

    <LinearLayout
        android:id="@+id/container1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/container2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/line1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_stroke_style_press_bw"
                    android:textColor="@color/black95"
                    android:layout_marginRight="190dp"
                    android:text="@string/back"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/love_ya_like_a_sister"/>

                <TextView
                    android:id="@+id/level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/level1"
                    android:textColor="@color/pink2"
                    android:textAllCaps="true"
                    android:textSize="25dp"
                    android:fontFamily="@font/love_ya_like_a_sister"
                    android:textStyle="bold"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/line2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="18dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/point1"
                    android:layout_weight="1"
                    android:background="@drawable/style_points"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/point2"
                    android:layout_weight="1"
                    android:background="@drawable/style_points"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/point3"
                    android:layout_weight="1"
                    android:background="@drawable/style_points"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/point4"
                    android:layout_weight="1"
                    android:background="@drawable/style_points"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/point5"
                    android:layout_weight="1"
                    android:background="@drawable/style_points"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/point6"
                    android:layout_weight="1"
                    android:background="@drawable/style_points"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/point7"
                    android:layout_weight="1"
                    android:background="@drawable/style_points"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/point8"
                    android:layout_weight="1"
                    android:background="@drawable/style_points"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/point9"
                    android:layout_weight="1"
                    android:background="@drawable/style_points"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/point10"
                    android:layout_weight="1"
                    android:background="@drawable/style_points"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/line4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <ImageView
                    android:id="@+id/img_left"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_weight="1"
                    android:layout_marginRight="5dp"
                    android:scaleType="centerCrop"
                    android:background="@drawable/style_img_universal"
                    android:src="@drawable/sloi0" />
                <ImageView
                    android:id="@+id/img_right"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_weight="1"
                    android:layout_marginRight="5dp"
                    android:scaleType="centerCrop"
                    android:background="@drawable/style_img_universal"
                    android:src="@drawable/sloi0" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/line5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textLeft"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/pink2"
                    android:fontFamily="@font/love_ya_like_a_sister"
                    android:textSize="25dp"
                    android:layout_marginRight="5dp"
                    android:gravity="center"
                    android:text="TextView" />
                <TextView
                    android:id="@+id/textRight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/pink2"
                    android:fontFamily="@font/love_ya_like_a_sister"
                    android:textSize="25dp"
                    android:layout_marginRight="5dp"
                    android:gravity="center"
                    android:text="TextView" />
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>
</RelativeLayout>